int radius = 100 ;
float x = - radius ;
float speed = 5 ;

void setup () {
  background(255);
  size (400, 400) ;
  smooth ();
  ellipseMode (RADIUS) ;
}

void draw () {
  background (0) ;
  x += speed ;
  if (x > width + radius) {
    x = -radius ;
  }
  arc (x, 200, radius, radius, 0.50, 5.75) ;
}
